---
import { Code, Download, Linkedin, Github, Mail } from "lucide-astro";
---

<section
  class="min-h-screen flex items-center justify-center hero-bg relative overflow-hidden"
>
  <!-- Elementos decorativos geométricos -->
  <div
    class="absolute top-20 right-20 w-16 h-16 border-2 border-blue-500/30 transform rotate-45"
  >
  </div>
  <div
    class="absolute bottom-32 left-16 w-20 h-20 border-2 border-blue-500/20 transform -rotate-12"
  >
  </div>
  <div
    class="absolute top-1/3 left-10 w-12 h-12 bg-blue-500/10 transform rotate-12"
  >
  </div>

  <div class="container mx-auto px-8 relative z-10 max-w-7xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      <!-- Contenido de texto -->
      <div class="space-y-8 flex flex-col justify-center">
        <!-- Saludo -->
        <div class="space-y-2">
          <h2 class="text-2xl md:text-3xl text-gray-300 font-light">
            <span class="text-blue-500"></span>
          </h2>
          <div class="w-20 h-0.5 bg-blue-500"></div>
        </div>

        <!-- Nombre -->
        <div class="space-y-4">
          <h1
            class="text-4xl md:text-5xl lg:text-6xl pt-10 text-white font-bold leading-tight"
          >
            Adrián de Jesús García Cornejo
          </h1>
          <p class="text-xl md:text-4xl text-gray-300 font-light">
            Software Developer Full-Stack
          </p>
          <p class="text-lg md:text-xl text-gray-400 font-light">
            Apasionado por crear soluciones innovadoras y eficientes.
          </p>
        </div>

        <!-- Botones -->
        <div class="flex flex-col lg:flex-row gap-4">
          <a
            href="#projects"
            class="inline-flex items-center px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold transition-all duration-300 transform hover:scale-105 no-underline rounded-xl text-sm"
          >
            <Code class="w-5 h-5 mr-2" />
            Proyectos
          </a>

          <a
            href="/resume.pdf"
            target="_blank"
            class="inline-flex items-center px-8 py-4 border-2 border-gray-600 text-gray-300 hover:border-blue-500 hover:text-blue-500 font-semibold transition-all duration-300 no-underline rounded-xl text-sm"
          >
            <Download class="w-5 h-5 mr-2" />
            Descargar CV
          </a>

          <a
            href="https://wa.me/7711204655"
            target="_blank"
            class="inline-flex items-center px-8 py-4 border-2 border-gray-600 text-gray-300 hover:border-green-500 hover:text-green-500 font-semibold transition-all duration-300 no-underline rounded-xl text-sm"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.515z"
              ></path>
            </svg>
            Contáctame
          </a>
        </div>

        <!-- Social Icons -->
        <div class="flex items-center gap-6 max-w-md mx-auto">
          <div class="flex gap-4">
            <a
              href="https://www.linkedin.com/in/adrian-de-jesus-garcia-cornejo-891066324"
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 bg-gray-800/50 hover:bg-blue-600 rounded-lg flex items-center justify-center transition-all duration-300 transform hover:scale-110 group"
            >
              <Linkedin class="w-6 h-6 text-gray-400 group-hover:text-white" />
            </a>
            <a
              href="https://github.com/Adrian-Cornejo"
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 bg-gray-800/50 hover:bg-gray-700 rounded-lg flex items-center justify-center transition-all duration-300 transform hover:scale-110 group"
            >
              <Github class="w-6 h-6 text-gray-400 group-hover:text-white" />
            </a>
            <a
              href="mailto:adrian.cornejo0105@gmail.com"
              class="w-12 h-12 bg-gray-800/50 hover:bg-red-600 rounded-lg flex items-center justify-center transition-all duration-300 transform hover:scale-110 group"
            >
              <Mail class="w-6 h-6 text-gray-400 group-hover:text-white" />
            </a>
          </div>
        </div>
      </div>

      <!-- Imagen -->
      <div class="flex align-center justify-center">
        <div class="relative">
          <!-- Círculo decorativo -->
          <div
            class="absolute inset-0 w-80 h-80 lg:w-96 lg:h-96 rounded-full border-4 border-blue-500/30 animate-pulse"
          >
          </div>
          <div
            class="absolute inset-4 w-72 h-72 lg:w-88 lg:h-88 rounded-full bg-blue-500/10"
          >
          </div>

          <!-- Imagen del perfil -->
          <img
            src="/images/adrian-avatar.png"
            alt="Adrián García"
            class="relative w-80 h-80 lg:w-96 lg:h-96 rounded-full object-cover shadow-2xl border-8 border-gray-800/50 z-10"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-bg {
    max-width: 100%;
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
    position: relative;
  }

  .hero-bg::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
        circle at 30% 80%,
        rgba(59, 130, 246, 0.1) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 20%,
        rgba(59, 130, 246, 0.05) 0%,
        transparent 50%
      );
    pointer-events: none;
  }

  .hero-bg::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 300px;
    background: linear-gradient(
      to top,
      rgba(15, 23, 42, 0.95) 0%,
      rgba(15, 23, 42, 0.7) 30%,
      rgba(15, 23, 42, 0.4) 80%,
      transparent 100%
    );
    pointer-events: none;
    z-index: 1;
  }

  /* Animaciones suaves */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  /* Responsive para imagen */
  @media (max-width: 1024px) {
    .lg\:w-88 {
      width: 22rem;
    }
    .lg\:h-88 {
      height: 22rem;
    }
  }

  /* Efectos hover mejorados */
  .hover\:scale-105:hover {
    transform: scale(1.05);
  }

  .hover\:scale-110:hover {
    transform: scale(1.1);
  }
</style>
